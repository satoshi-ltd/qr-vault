{
  "expo": {
    "name": "SplitPass",
    "slug": "satoshi-ltd-splitpass",
    "owner": "satoshi-ltd",
    "scheme": "splitpass",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#111"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.satoshi-limited.splitpass",
      "buildNumber": "3",
      "usesIcloudStorage": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111"
      },
      "package": "com.satoshilimited.splitpass",
      "versionCode": 3,
      "permissions": ["android.permission.CAMERA", "android.permission.RECORD_AUDIO"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "d4863ee6-c3f5-46b2-ab09-0a13ee11711e"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "$(PRODUCT_NAME) needs camera access to scan QR codes."
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Necesitamos usar NFC para leer tarjetas",
          "selectIdentifiers": ["*"],
          "systemCodes": ["*"],
          "includeNdefEntitlement": false
        }
      ]
    ]
  }
}
