{
  "manifest_version": 3,
  "name": "ShardQR Extension",
  "version": "1.0",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./index.jsx"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["./assets/icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
